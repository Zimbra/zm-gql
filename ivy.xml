<ivy-module version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:noNamespaceSchemaLocation="http://ant.apache.org/ivy/schemas/ivy.xsd">
    <info organisation="zimbra" module="zm-gql" status="integration" />
    <configurations>
      <conf name="compile" />
      <conf name="runtime" extends="compile" />
      <conf name="test" extends="runtime" />
      <conf name="doclet" extends="runtime" />
    </configurations>
    <dependencies>
      <!-- Core Requirements -->
      <dependency org="com.graphql-java" name="graphql-java" rev="7.0" conf="compile->default" />
      <dependency org="com.graphql-java" name="graphql-java-tools" rev="4.3.0" conf="compile->default" />
      <dependency org="com.graphql-java" name="graphql-java-servlet" rev="4.3.0" conf="compile->default" />
      <!-- Servlet Requirements -->
      <dependency org="javax.servlet" name="javax.servlet-api" rev="3.1.0" conf="compile->default" />
      <!-- Commons Requirements -->
      <dependency org="commons-collections" name="commons-collections" rev="3.2.2" conf="compile->default" />
      <dependency org="commons-io" name="commons-io" rev="1.4" conf="compile->default" />
      <dependency org="commons-codec" name="commons-codec" rev="1.7" conf="compile->default" />
      <dependency org="commons-lang" name="commons-lang" rev="2.6" conf="compile->default" />
      <!-- Local Requirements -->
      <dependency org="zimbra" name="zm-common" rev="latest.integration" conf="compile->default" />
      <dependency org="zimbra" name="zm-store" rev="latest.integration" conf="compile->default" />
      <!-- Test Requirements -->
      <dependency org="junit" name="junit" rev="4.12" conf="test->default" />
      <dependency org="org.easymock" name="easymock" rev="3.4" conf="test->default" />
      <!-- Doclet Requirements -->
      <dependency org="com.tenxerconsulting" name="swagger-doclet" rev="1.1.3" conf="doclet->default" />
      <!-- Fix for Jaxen : ZCS-4261 -->
      <dependency org="jaxen" name="jaxen" rev="1.1.3" conf="compile->*" />
      <exclude org="maven-plugins" module="maven-cobertura-plugin"/>
      <exclude org="maven-plugins" module="maven-findbugs-plugin"/>
    </dependencies>
</ivy-module>